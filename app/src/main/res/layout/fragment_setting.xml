<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_6x"
        android:paddingLeft="@dimen/dimen_2x">

        <com.pt.movieticket.widgets.textview.TextViewOpenSansSemibold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/notifications"
            android:textColor="@android:color/black" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switch_bt"
            android:layout_width="@dimen/dimen_6x"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_1x"
            app:kswThumbColor="@android:color/white" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@android:color/darker_gray" />


</LinearLayout>