<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivm_promotion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_1x"
        android:paddingTop="@dimen/dimen_1x">

        <com.pt.movieticket.widgets.textview.TextViewUTMAircona
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/lovers_ticket"
            android:textColor="@color/yellowDark"
            android:textSize="@dimen/text_size_xlarge" />

        <View
            android:layout_width="@dimen/dimen_5x"
            android:layout_height="@dimen/divider_height"
            android:layout_gravity="center"
            android:background="@color/yellowDark" />
    </LinearLayout>

    <com.pt.movieticket.widgets.textview.TextViewOpenSansRegular
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_5x"
        android:layout_marginRight="@dimen/dimen_5x"
        android:maxLines="3"
        android:text="@string/lovers_ticket" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_1x">

        <ImageView
            android:id="@+id/ivm_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_3x"
            android:visibility="invisible"
            android:src="@drawable/ic_share" />

        <com.pt.movieticket.widgets.textview.TextViewOpenSansSemibold
            android:id="@+id/tv_read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_button_payment"
            android:padding="@dimen/dimen_1x"
            android:text="@string/read_more"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/ivm_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_3x"
            android:visibility="invisible"
            android:src="@drawable/ic_menu" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginBottom="@dimen/dimen_1x"
        android:layout_marginTop="@dimen/dimen_1x"
        android:background="@color/grey" />
</LinearLayout>